{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    //    "inlineSourceMap": true,
    //    "inlineSources": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "types": ["node"],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "index.d.ts",
    "./src/index.ts",
    "./src/services/login.service.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}